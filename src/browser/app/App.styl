  grid($columnWidth)

  .project__author__card, .project__project__card
    width: $cardWidth
    margin: $cardMargin

    display inline-block

    padding-top 25px

    vertical-align top

    word-wrap break-all

    max-width "calc(100vw - %s)" % ($cardMargin * 2 + 20px)
    min-width 200px

    .presentation
      padding-left 20px
      padding-right 20px

.text-center
  text-align center

.projects
  $cardWidth = 500px
  $cardMargin = 20px

  $columnWidth = $cardWidth + $cardMargin * 2

  grid($columnWidth)

  margin 30px auto 0 auto

  > div
    display inline-block
    width $cardWidth

    +between(0, $columnWidth)
      width 90%
      margin $cardMargin 5%

    margin $cardMargin

  &__card

    .header, .title

      &:hover
        cursor: pointer
        background-color: #eee
        -webkit-user-select: none

